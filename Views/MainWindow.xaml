<Window x:Class="Veour.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Veour"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="MainWindow" Height="700" Width="1260" WindowStartupLocation="CenterScreen">
    <StackPanel Background="#254b8f">
        <StackPanel Orientation="Horizontal"
                    Background="#001945"
                    Height="100" Width="1260">

            <Image Source="\Assets\Images\logo.png" Height="60" Width="200"
                   Margin="60,0,105,0" VerticalAlignment="Center"/>

            <Label x:Name="label" Content="Enter Your Location" Foreground="White"
                   FontSize="24" VerticalAlignment="Center" Margin="0,0,8,0"/>

            <ComboBox x:Name="CityStateInput"
                      IsEditable="True"
                      Width="223" Height="28" Padding="5,0,0,0"
                      FontSize="18" Margin="0,0,8,0"
                      VirtualizingPanel.IsVirtualizing="True"
                      VirtualizingPanel.VirtualizationMode="Recycling" IsDropDownOpen="True" AutomationProperties.HelpText="Enter your city and state here">
                <ComboBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <VirtualizingStackPanel/>
                    </ItemsPanelTemplate>
                </ComboBox.ItemsPanel>
            </ComboBox>


            <Button x:Name="SearchButton" Content="Search" Height="32" Padding="5" Width="64" FontSize="18" 
                    Click="SearchButton_Click">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="3"/>
                    </Style>
                </Button.Resources>
            </Button>
        </StackPanel>

        <Grid>

        </Grid>
    </StackPanel>
</Window>
