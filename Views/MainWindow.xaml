<Window x:Class="Veour.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Veour"
        xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
        mc:Ignorable="d"
        Title="Veour" Height="750" Width="1260" WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="true"
        Background="Transparent">
    <Border CornerRadius="10" BorderThickness="1" 
            MouseLeftButtonDown="PnlControlBar_MouseLeftButtonDown"
            MouseEnter="PnlControlBar_MouseEnter">
        <Border.BorderBrush>
            <SolidColorBrush Color="#001945"/>
        </Border.BorderBrush>
        <Grid>
            <Grid.RowDefinitions>
                <!-- Top Bar -->
                <RowDefinition Height="100"/>
                <!-- Main Content Area -->
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Top Header Section -->
            <Border CornerRadius="10,10,0,0" Grid.Row="0">
                <Border.Background>
                    <SolidColorBrush Color="#001945"/>
                </Border.Background>

                <Grid>
                    <Grid.RowDefinitions>
                        <!-- Windows Buttons Row -->
                        <RowDefinition Height="30"/>
                        <!-- Content Row -->
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <!-- Windows Min/Max/Close Section -->
                    <StackPanel x:Name="pnlControlBar"
                                Grid.Row="0"
                                Orientation="Horizontal"
                                FlowDirection="RightToLeft"
                                Background="Transparent"
                                Margin="0,-1,-1,0"
                                >
                        <Button x:Name="btnClose"
                                Style="{StaticResource winBtnClose}" 
                                Click="BtnClose_Click">
                            <fa:IconImage Icon="Xmark" Style="{StaticResource winBtnIcon}"/>
                        </Button>
                        <Button x:Name="btnMaximize"
                                Style="{StaticResource winBtn}"
                                Click="BtnMaximize_Click">
                            <fa:IconImage Icon="WindowMaximize" Style="{StaticResource winBtnIcon}"/>
                        </Button>
                        <Button x:Name="btnMinimize"
                                Style="{StaticResource winBtn}"
                                Width="38"
                                Click="BtnMinimize_Click">
                            <fa:IconImage Icon="WindowMinimize" Style="{StaticResource winBtnIcon}"/>
                        </Button>
                    </StackPanel>
                    
                    <!-- Section for the top menu bar with the City/State input box and search button -->
                    <StackPanel Grid.Row="1"
                        Orientation="Horizontal"
                        Background="#001945"
                         Width="1260">

                        <Image Source="\Assets\Images\logo.png" Height="60" Width="200"
                       Margin="60,0,105,0" VerticalAlignment="Center"/>

                        <Label x:Name="label" Content="Enter Your Location" 
                               VerticalAlignment="Center" Margin="0,0,8,0"
                               FontSize="24" Foreground="White" FontFamily="Calibri Light"/>

                        <Border CornerRadius="2" BorderThickness="1" Background="Transparent" Width="223" Height="28" 
                                Margin="0,0,8,0" HorizontalAlignment="Stretch" BorderBrush="White" > 
                            <ComboBox x:Name="CityStateInput"
                              IsEditable="True"
                              FontSize="18" FontFamily="Calibri Light"
                              VirtualizingPanel.IsVirtualizing="True" VirtualizingPanel.VirtualizationMode="Recycling" 
                              AutomationProperties.HelpText="Enter your city and state here">
                                <ComboBox.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <VirtualizingStackPanel/>
                                    </ItemsPanelTemplate>
                                </ComboBox.ItemsPanel>
                            </ComboBox>
                        </Border>

                        <Button x:Name="SearchButton" Content="Search" Height="32" Width="64" Padding="5" FontSize="18" FontFamily="Calibri Light"
                        Click="SearchButton_Click">
                            <Button.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="3"/>
                                </Style>
                            </Button.Resources>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Main Content Section -->
            <Border Grid.Row="1" CornerRadius="0,0,10,10">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#001945" Offset="0.0"/>
                        <GradientStop Color="#021c49" Offset="0.1"/>
                        <GradientStop Color="#0b285b" Offset="0.28"/>
                        <GradientStop Color="#163771" Offset="0.50"/>
                        <GradientStop Color="#1e4180" Offset="0.65"/>
                        <GradientStop Color="#254b8f" Offset=".85"/>
                    </LinearGradientBrush>
                </Border.Background>
                <Grid>
                    <Grid.RowDefinitions>
                        <!-- Forecast Section -->
                        <RowDefinition Height="*"/>
                        <!-- Empty Spacer @ Bottom -->
                        <RowDefinition Height="10"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Forecast Section -->
                    <ContentControl x:Name="contentBox" />



